@model TrabalhoWeb2.WSAula.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NovoUsuario</title>
    <link href="~/Media/Css/main.css" rel="stylesheet" />
</head>
<body>
    <main class="main">
        <div class="area-titulo">
            <h1 class="titulo">Cadastro</h1>
        </div>
        @Html.ViewBag.Msg
        <section class="form">            
            <form id="frmNovoUsuario" method="post" action="~/Home/salvarUsuario">
                <fieldset>
                    <section class="form-group">
                        <div class="form-item">
                            @Html.TextBoxFor(n => n.Nome, null, new { @class = "form-control" })
                            @Html.LabelFor(n => n.Nome, new { @class = "label-float" })
                            </div>
                        <div class="form-item">
                            @Html.TextBoxFor(n => n.Login, null, new { @class = "form-control" })
                            @Html.LabelFor(n => n.Login, new { @class = "label-float" })
                            </div>
                        <div class="form-item">
                            @Html.PasswordFor(n => n.Senha, new { @class = "form-control" })
                            @Html.LabelFor(n => n.Senha, new { @class = "label-float" })
                            </div>
                        <div class="form-item">
                            @Html.Password("txtSenha02", null, new { @class = "form-control" })
                            @Html.Label("Confirma Senha", new { @class = "label-float" })
                            </div>
                        <button class="botao" type="submit">Salvar</button>
                        <button class="botao" type="reset">Limpar</button>
                        <span class="float-link">
                            @Html.ActionLink("« Voltar", "Index", null, new { @class = "link" })
                        </span>
                    </section>
                </fieldset>
            </form>            
        </section>
    </main>
</body>
</html>
