@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Media/Css/main.css" rel="stylesheet" />
</head>
<body>
    <main class="main">
        <div class="area-titulo">
            <h1 class="titulo">Bem Vindo</h1>
        </div>
        @Html.ViewBag.MsgErro
        <section  class="form">
            <form method="post" id="frmLogin" action="~/Home/Login">
                <fieldset>
                    <section class="form-group">
                        <div class="form-item">
                            @Html.TextBox("txtUsuario", null, new { @class = "form-control" })
                            @Html.Label("Usuário: ", new { @class = "label-float" })
                        </div>
                        <div class="form-item">
                            @Html.Password("txtSenha", null, new { @class = "form-control" })
                            @Html.Label("Senha: ", new { @class = "label-float" })
                        </div>
                        <button class="botao" type="submit">Entrar</button>
                        <span class="float-link">
                            @Html.ActionLink("Novo Usuário", "NovoUsuario", null , new { @class = "link" })
                        </span>
                    </section>
                </fieldset>
            </form>
        </section>        
    </main>


    <script src="~/Media/Script/jquery-2.1.4.min.js"></script>
    @if (false)
    {
        <script src="~/Media/Script/jquery-2.1.4-vsdoc.js"></script>
    }
    <script src="~/Media/Script/script.js"></script>

</body>
</html>
